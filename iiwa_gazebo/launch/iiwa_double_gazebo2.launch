<launch>
    <!-- These are the arguments you can pass this launch file, for example paused:=true -->
    <arg name="paused" default="false"/>
    <arg name="use_sim_time" default="true"/>
    <arg name="gui" default="true"/>
    <arg name="headless" default="false"/>
    <arg name="debug" default="false"/>
    <arg name="world_name" default="$(find iiwa_gazebo)/world/iiwa.world"/>

    <!-- Select the controller -->
    <arg name="controller" default="TorqueController"/>

    <!-- Select the robot name -->
    <arg name="robot_name_1" default="iiwa1"/>
    <arg name="robot_name_2" default="iiwa_blue"/>

    <!-- Select the model of the iiwa -->
    <arg name="iiwa_model_1" default="14"/>
    <arg name="iiwa_model_2" default="7"/>

    <!-- Select the position of the robot -->
    <arg name="position_1" default="-y -0.53"/>
    <arg name="position_2" default="-y 0.53"/>
    <!-- <arg name="position_1" default="-y -0.65"/>
    <arg name="position_2" default="-y 0.65"/> -->

    <arg name="position_base_1" default="0.15"/>
    <arg name="position_base_2" default="-0.15"/>

    <!-- Select the objects you want to spawn -->
    <arg name="force_sensor_1" default="true"/>
    <arg name="grabber_1" default="true"/>
    <arg name="table_1" default="true" />
    <arg name="base_1" default="true" />

    <arg name="force_sensor_2" default="true"/>
    <arg name="grabber_2" default="true"/>
    <arg name="table_2" default="true" />
    <arg name="base_2" default="true" />

    <include file="$(find iiwa_gazebo)/launch/iiwa_spawner2.launch">
        <arg name="robot_name" value="$(arg robot_name_1)"/>
        <arg name="iiwa_model" value="$(arg iiwa_model_1)"/>
        <arg name="controller" value="$(arg controller)" />
        <arg name="position" value="$(arg position_1)"/>
        <arg name="table" value="$(arg table_1)" />
        <arg name="base" value="$(arg base_1)" />
        <arg name="ft_sensor" value="$(arg force_sensor_1)" />
        <arg name="grabber" value="$(arg grabber_1)" />
        <arg name="position_base" value="$(arg position_base_1)" />

    </include>

    <include file="$(find iiwa_gazebo)/launch/iiwa_spawner2.launch">
        <arg name="robot_name" value="$(arg robot_name_2)"/>
        <arg name="iiwa_model" value="$(arg iiwa_model_2)"/>
        <arg name="controller" value="$(arg controller)" />
        <arg name="position" value="$(arg position_2)"/>
        <arg name="table" value="$(arg table_2)" />
        <arg name="base" value="$(arg base_2)" />
        <arg name="ft_sensor" value="$(arg force_sensor_2)" />
        <arg name="grabber" value="$(arg grabber_2)" />
        <arg name="position_base" value="$(arg position_base_2)" />
    </include>

    <!-- Loads the Gazebo world -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(arg world_name)"/>
        <arg name="debug" value="$(arg debug)" />
        <arg name="gui" value="$(arg gui)" />
        <arg name="paused" value="$(arg paused)"/>
        <arg name="use_sim_time" value="$(arg use_sim_time)"/>
        <arg name="headless" value="$(arg headless)"/>
    </include>

</launch>