<launch>
    <!-- Select the robot -->
    <arg name="model" default="7" />

    <!-- Select the controller -->
    <arg name="controller" default="TorqueController"/>

    <!-- Configure the cobots connection-->
    <rosparam file="$(find iiwa_driver)/config/iiwa.yaml" ns="iiwa_driver" command="load" subst_value="True"/>

    <!-- Configure the controllers -->
    <rosparam file="$(find iiwa_control)/config/iiwa_control.yaml" command="load" subst_value="True"/>

    <!-- Bringup the IIWA -->
    <include file="$(find iiwa_driver)/launch/iiwa_bringup.launch">
        <arg name="model" value="$(arg model)"/>
        <arg name="controller" value="$(arg controller)"/>
    </include>

</launch>